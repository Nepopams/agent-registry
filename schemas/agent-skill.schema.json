{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://a2a.schemas/agent-skill.schema.json",
  "title": "Agent Skill",
  "type": "object",
  "required": [
    "name",
    "version",
    "description",
    "inputs",
    "outputs",
    "examples",
    "runtime",
    "visibility"
  ],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "minLength": 3
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z-]+)?(?:\\+[0-9A-Za-z-]+)?$"
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "category": {
      "type": "string",
      "minLength": 3
    },
    "visibility": {
      "type": "string",
      "enum": ["public", "private", "internal"]
    },
    "inputs": {
      "$ref": "#/$defs/ioSchema"
    },
    "outputs": {
      "$ref": "#/$defs/ioSchema"
    },
    "runtime": {
      "type": "object",
      "required": ["type", "entryPoint"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["http", "process", "container"]
        },
        "entryPoint": {
          "type": "string",
          "minLength": 1
        },
        "timeoutMs": {
          "type": "integer",
          "minimum": 100
        },
        "memory": {
          "type": "integer",
          "minimum": 64
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        }
      }
    },
    "telemetry": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "emitsMetrics": {
          "type": "boolean"
        },
        "emitsLogs": {
          "type": "boolean"
        }
      }
    },
    "security": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "requiresAuth": {
          "type": "boolean"
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        }
      }
    },
    "examples": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "description", "input", "output"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3
          },
          "description": {
            "type": "string",
            "minLength": 5
          },
          "input": {
            "type": "object",
            "additionalProperties": true
          },
          "output": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    }
  },
  "$defs": {
    "ioSchema": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["object", "array", "string", "integer", "number", "boolean"]
        },
        "description": {
          "type": "string"
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type"],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "string",
                  "number",
                  "integer",
                  "boolean",
                  "array",
                  "object"
                ]
              },
              "description": {
                "type": "string"
              },
              "enum": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": ["string", "number", "integer", "boolean"]
                }
              },
              "items": {
                "type": "object",
                "additionalProperties": true
              }
            }
          }
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        },
        "items": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}

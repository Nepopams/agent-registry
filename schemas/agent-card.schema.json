{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://a2a.schemas/agent-card.schema.json",
  "title": "Agent Card",
  "type": "object",
  "required": [
    "protocolVersion",
    "name",
    "version",
    "description",
    "skills",
    "security",
    "preferredTransport"
  ],
  "additionalProperties": false,
  "properties": {
    "protocolVersion": {
      "type": "string",
      "pattern": "^a2a/[0-9]+\\.[0-9]+$"
    },
    "name": {
      "type": "string",
      "minLength": 3
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z-]+)?(?:\\+[0-9A-Za-z-]+)?$"
    },
    "description": {
      "type": "string",
      "minLength": 20
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2
      },
      "uniqueItems": true,
      "maxItems": 20
    },
    "maintainers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "email"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        }
      }
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "documentation": {
      "type": "string",
      "format": "uri"
    },
    "security": {
      "type": "object",
      "required": ["authentication", "encryption"],
      "additionalProperties": false,
      "properties": {
        "authentication": {
          "type": "string",
          "enum": ["none", "api-key", "oauth2", "mutual-tls"]
        },
        "encryption": {
          "type": "string",
          "enum": ["required", "optional"]
        },
        "audience": {
          "type": "string",
          "minLength": 3
        }
      }
    },
    "preferredTransport": {
      "type": "string",
      "enum": ["https", "websocket", "nats", "grpc"]
    },
    "additionalTransports": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["https", "websocket", "nats", "grpc", "mqtt"]
      },
      "uniqueItems": true
    },
    "additionalInterfaces": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "endpoint", "protocol"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3
          },
          "endpoint": {
            "type": "string",
            "format": "uri"
          },
          "protocol": {
            "type": "string",
            "enum": ["rest", "graphql", "grpc", "cli"]
          },
          "description": {
            "type": "string",
            "minLength": 5
          }
        }
      }
    },
    "preferredLocales": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z]{2}-[A-Z]{2}$"
      },
      "uniqueItems": true,
      "maxItems": 10
    },
    "metadata": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "integer", "boolean"]
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "skills": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "./agent-skill.schema.json"
      }
    }
  }
}
